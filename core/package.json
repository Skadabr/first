{
  "name": "core",
  "version": "1.0.0",
  "main": "lib/index.js",
  "license": "MIT",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "typecheck": "rm -rf lib; tsc --pretty --noEmit",
    "build": "rm -rf lib; tsc --pretty",
    "build:def": "rm -rf lib; tsc -d --pretty",
    "test": "jest",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ]
  },
  "dependencies": {
    "deep-copy": "^1.4.2",
    "eventemitter3": "^3.0.1",
    "lodash.groupby": "^4.6.0",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/node": "^9.4.6",
    "jest": "^22.4.3",
    "prettier": "^1.11.1",
    "ts-jest": "^22.4.2",
    "typescript": "^2.7.2"
  }
}
