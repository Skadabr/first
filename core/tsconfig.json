{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",

    "experimentalDecorators": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,

    "sourceMap": true,
    "target": "es6",
    "lib": ["es2017"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true

  },
  "exclude": ["node_modules", "*.test.ts", "./lib"]
}
