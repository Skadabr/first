{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",

    "experimentalDecorators": true,
    "noImplicitAny": false,

    "sourceMap": true,
    "module": "CommonJS",
    "target": "es6",
    "lib": ["es2017"],
    "moduleResolution": "Node",

    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true

  },
  "exclude": ["node_modules"]
}
